{{#each projects as |project| }}
<div class="row mb-3 project">
  <div class="card" id="postCard">
  <div class="col-md-12">
    <h2 id="postHead">
      <a href="/projects/{{project.id}}">{{project.title}}</a>
    </h2>
    <p id="author"> By: {{project.user.name}}</p>
    <p id="date"> {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-12">
    <p>
      {{project.description}}
    </p>
  </div>
  <div class="btn-group">
    <button class="btn">Fire</button>
    <button class="btn">Mehh</button>
  </div>

  <form class="form add-comment" data-blogID="{{project.id}}">
    <div class="from-group">
        <textarea class="form-input" id="addComment" placeholder="Speak your mind..." name="addComment"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Glare</button>
    </div>
  </form>

  </div>
</div>
{{/each}}

<script src="./js/comment.js"></script>